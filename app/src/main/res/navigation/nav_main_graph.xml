<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.vacunas.ui.splash.view.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_userListFragment"
            app:destination="@id/userListFragment"
            app:enterAnim="@anim/fade_enter"
            app:exitAnim="@anim/fade_exit"
            app:popEnterAnim="@anim/fade_enter"
            app:popExitAnim="@anim/fade_exit"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/userListFragment"
        android:name="com.example.vacunas.ui.user.list.UserListFragment"
        android:label="fragment_list_users"
        tools:layout="@layout/fragment_list_users">
        <action
            android:id="@+id/action_userListFragment_to_blankFragment"
            app:destination="@id/blankFragment"
            app:enterAnim="@anim/translate_enter"
            app:exitAnim="@anim/fade_exit"
            app:popEnterAnim="@anim/fade_enter"
            app:popExitAnim="@anim/translate_exit" />
        <action
            android:id="@+id/action_userListFragment_to_userEditingFragment"
            app:destination="@id/userEditingFragment"
            app:enterAnim="@anim/fade_enter"
            app:exitAnim="@anim/fade_exit"
            app:popEnterAnim="@anim/fade_enter"
            app:popExitAnim="@anim/fade_exit"/>
        <action
            android:id="@+id/action_userListFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/translate_enter"
            app:exitAnim="@anim/fade_exit"
            app:popEnterAnim="@anim/fade_enter"
            app:popExitAnim="@anim/translate_exit" />
    </fragment>
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.example.vacunas.ui.blank.BlankFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_blank" />
    <fragment
        android:id="@+id/userEditingFragment"
        android:name="com.example.vacunas.ui.user.editing.UserEditingFragment"
        android:label="UserEditingFragment"
        tools:layout="@layout/fragment_editing_user"/>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.vacunas.ui.detail.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail"/>
</navigation>